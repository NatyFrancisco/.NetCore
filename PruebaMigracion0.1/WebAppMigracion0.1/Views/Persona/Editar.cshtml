@model WebAppMigracion0._1.Models.BD.ListTablaPersona
@{
    ViewBag.Title = "Editar registros";
}



<p style="text-align:center"><strong>   Edite el listado de registros de personas</strong></p>
<hr />


@using (Html.BeginForm("Editar", "Persona", FormMethod.Post))


{
    <div class="row">
        <div class="col-md-12">

            @*Cod. para guardar el ID*@
            @Html.HiddenFor(d => d.Id)


            @*Automaticamente se llenan los controles*@


            <div>
                @Html.LabelFor(d => d.Nombre)
                @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "red" })
                <br /> 
            </div>

            <div>
                @Html.LabelFor(d => d.Apellido)
                @Html.TextBoxFor(d => d.Apellido, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Apellido, null, new { @class = "red" })
                <br /> 
            </div>



            <div>
                <label>Fecha de nacimiento</label>
         
            
            <br />
                @Html.EditorFor(d => d.FechaNacimiento, "", new { @class = "form-control" })<br />

                @*Helper que indica errores*@
                @Html.ValidationMessageFor(d => d.FechaNacimiento, null, new { @class = "red" })
            </div>
            <br />


            <div>
                @Html.LabelFor(d => d.Pasaporte)
                @Html.TextBoxFor(d => d.Pasaporte, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Pasaporte, null, new { @class = "red" })
                <br /> 
            </div>

            <div>
                @Html.LabelFor(d => d.Direccion)
                @Html.TextBoxFor(d => d.Direccion, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Direccion, null, new { @class = "red" })
                <br />
            </div>

            <div>
                <label><strong>Sexo:</strong></label>
                <br />
                @Html.RadioButton("Sexo", "Masculino")Masculino
                <br />
                @Html.RadioButton("Sexo", "Femenino")Femenino

                @Html.ValidationMessageFor(d => d.Sexo, null, new { @class = "red" })
                <br />
            </div>


            <br />

            <div style="text-align:right;">
                <input value="Guardar cambios" class="btn btn-primary" type="submit" />

            </div>


        </div>
    </div>
}