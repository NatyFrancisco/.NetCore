@model List<WebAppMigracion0._1.Models.BD.ListTablaPersona>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Listado de registros de personas";
}
<!--Se utiliza bootstrap para darle elstilo-->
<!--Boton nuevo-->
<div class="row" align="right"; padding:5px;">
    <a  href="~/Persona/Nuevo" class="btn btn-primary">Agregar nuevos registros</a>
</div>

<p style="text-align:center"><strong>Listado de registros de personas</strong></p>
<hr />
<br />

<div class="row">
    <!--Listado de 12 columnas-->
    <div class="col-md-12">
        <!--Creacion de la tabla-->
        <table class="table table-striped">

            <tr>


                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Fecha de nacimiento</th>
                <th>Pasaporte</th>
                <th>Direccion</th>
                <th>Sexo</th>
               
                <th>Opciones</th>
            </tr>

            <!--Foreach para traer los datos-->
            @foreach (var oElemento in Model)
            {
                <tr>


                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Apellido</td>
                    <td>@oElemento.FechaNacimiento</td>
                    <td>@oElemento.Pasaporte</td>
                    <td>@oElemento.Direccion</td>
                    <td>@oElemento.Sexo</td>

                

                    <td>
                        @*Creacion de los botones*@
                        <a class="btn btn-dark" href="~/Persona/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Persona/Eliminar/@oElemento.Id">Eliminar</a>

                    </td>

                </tr>




            }



        </table>

    </div>
</div>